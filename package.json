{
  "name": "homebridge-nibe",
  "displayName": "Homebridge Nibe",
  "version": "0.0.3",
  "description": "Homebridge plugin for Nibe services",
  "author": "Hubert Pruszynski <hubert.pruszynski@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hp-net/homebridge-nibe.git"
  },
  "bugs": {
    "url": "https://github.com/hp-net/homebridge-nibe/issues"
  },
  "funding": [
    {
      "type": "buymeacoffee",
      "url": "https://www.buymeacoffee.com/hpruszyn"
    }
  ],
  "scripts": {
    "lintFix": "eslint --fix src/**.ts",
    "lint": "eslint src/**.ts",
    "copyFiles": "cpx \"./**/*.{html,yaml,png}\"  dist",
    "watch": "npm run build && npm link && nodemon",
    "clean": "rimraf ./dist",
    "build": "rimraf ./dist && tsc && npm run copyFiles",
    "prepublishOnly": "npm run lint && npm run build",
    "postpublish": "npm run clean"
  },
  "keywords": [
    "homebridge-plugin",
    "nibe"
  ],
  "engines": {
    "node": ">=16.14.0",
    "homebridge": ">=1.4.0"
  },
  "dependencies": {
    "@homebridge/plugin-ui-utils": "^0.0.19",
    "axios": "^0.26.1",
    "js-yaml": "^4.1.0",
    "jsonfile": "^6.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/jsonfile": "^6.1.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "cpx": "^1.5.0",
    "eslint": "^8.12.0",
    "homebridge": "^1.4.0",
    "homebridge-config-ui-x": "^4.42.0",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.3"
  }
}
